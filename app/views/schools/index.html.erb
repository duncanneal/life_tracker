<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start year</th>
      <th>End year</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.title %></td>
        <td><%= school.start_year %></td>
        <td><%= school.end_year %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert small" %></td>
      </tr>
    <% end %>
  </tbody>
